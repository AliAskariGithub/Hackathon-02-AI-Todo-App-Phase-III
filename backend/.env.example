# Backend Environment Variables

# Database Configuration
# For local development with SQLite
DATABASE_URL=your_connection_string_here

# For production with PostgreSQL (Neon example)
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Authentication Settings
BETTER_AUTH_SECRET="your-secret-key-here"

# Application Settings
LOG_LEVEL=info
DEBUG=true

# For production, set DEBUG to false
# DEBUG=false

# JWT Secret for custom auth
JWT_SECRET="your-jwt-secret-key-here"
JWT_EXPIRATION_DELTA_MINUTES=30

# OpenRouter API Key for agent integration
OPENROUTER_API_KEY="your-openrouter-api-key-here"

# OpenRouter Model for agent
OPENROUTER_MODEL="your-openrouter-model-here"

# DEBUG=false